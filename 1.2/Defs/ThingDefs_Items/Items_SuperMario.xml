  <ThingDef ParentName="ResourceBase" Name="KoopaTroopaShell">
    <defName>KoopaTroopaShell</defName>
    <label>koopa troopa shell</label>
    <description>A koopa troopa shell from a butchered koopa troopa. Can be turned into a low tech helmet at a crafting spot.</description>
    <graphicData>
      <texPath>Things/KoopaTroopaShell</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>50</MarketValue>
      <MaxHitPoints>75</MaxHitPoints>
      <Mass>.5</Mass>
      <Flammability>0.8</Flammability>
      <DeteriorationRate>0.75</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>5</stackLimit>
    <deepCommonality>0</deepCommonality>
    <thingSetMakerTags>
      <li>AnimalPart</li>
    </thingSetMakerTags>       
	<stuffProps>
      <categories>
        <li>Leathery</li>
      </categories>
      <commonality>0.01</commonality>
      <statFactors>
        <MaxHitPoints>1</MaxHitPoints>
        <Flammability>0.5</Flammability>
      </statFactors>
    </stuffProps>
  </ThingDef>
  
