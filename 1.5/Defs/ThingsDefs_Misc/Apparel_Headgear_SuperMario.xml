<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ================================== Shell Helmets ====================================-->
	
	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>Apparel_KoopaTroopaShellHelmet</defName>
		<label>koopa troopa shell helmet</label>
		<description>A helmet made from a koopa troopa shell; gives decent proction from attacks, and some from heat and cold. Made at crafting spot or smithy.</description>
		<techLevel>Neolithic</techLevel>
		<graphicData>
			<texPath>Things/KoopaTroopaHelmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<KoopaTroopaShell>1</KoopaTroopaShell>
		</costList>
		<statBases>
			<WorkToMake>2500</WorkToMake>
			<MaxHitPoints>90</MaxHitPoints>
			<Mass>2</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>0.35</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.35</ArmorRating_Blunt>
			<ArmorRating_Heat>0.30</ArmorRating_Heat>
			<Insulation_Cold>4</Insulation_Cold>
			<Insulation_Heat>2</Insulation_Heat>
			<EquipDelay>2.5</EquipDelay>
			<MarketValue>100</MarketValue>
		</statBases>
		<recipeMaker>
			<recipeUsers>
				<li>CraftingSpot</li>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
		</recipeMaker>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/KoopaTroopaHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>

