          <drawSize>.5</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Tortoise/Dessicated_Tortoise</texPath>
          <drawSize>.5</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/KoopaTroopa</texPath>
          <color>(255,255,255)</color>
          <drawSize>.8</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Tortoise/Dessicated_Tortoise</texPath>
          <drawSize>.8</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/KoopaTroopa</texPath>
          <color>(255,255,255)</color>
          <drawSize>1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Tortoise/Dessicated_Tortoise</texPath>
          <drawSize>1</drawSize>
        </dessicatedBodyGraphicData>
        <butcherBodyPart>
          <bodyPartGroup>ShellAttackTool</bodyPartGroup>
          <thing>KoopaTroopaShell</thing>
        </butcherBodyPart>
      </li>
