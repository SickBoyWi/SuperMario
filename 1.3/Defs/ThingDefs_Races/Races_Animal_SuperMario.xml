<Defs>

  <!-- ======================= Koopa Troopa ======================= -->
  <ThingDef ParentName="AnimalThingBase">
    <defName>KoopaTroopa</defName>
    <label>koopa troopa</label>
    <description>A large, easily aggravated turtle. Butchering this creature gets you some meat, lizard leather, and a koopa troopa shell.</description>
    <statBases>
      <MoveSpeed>1.0</MoveSpeed>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <ComfyTemperatureMax>50</ComfyTemperatureMax>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.50</ArmorRating_Sharp>
      <FilthRate>2</FilthRate>
    </statBases>
    <tools>
      <li>
        <label>mouth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>3</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>TurtleBeakAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>3</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
      <li>
        <label>shell</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>ShellAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>KoopaTroopaLike</body>
      <baseBodySize>.3</baseBodySize>
      <baseHungerRate>0.5</baseHungerRate>
      <baseHealthScale>0.8</baseHealthScale>
      <foodType>OmnivoreRoughAnimal</foodType>
      <leatherDef>Leather_Lizard</leatherDef>
      <wildness>0.8</wildness>
      <lifeExpectancy>100</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.15</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.5</minAge>
          <soundWounded>Pawn_Tortoise_Wounded</soundWounded>
          <soundDeath>Pawn_Tortoise_Death</soundDeath>
          <soundCall>Pawn_Tortoise_Call</soundCall>
          <soundAngry>Pawn_Tortoise_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>
  
  <PawnKindDef ParentName="AnimalKindBase">
    <defName>KoopaTroopa</defName>
    <label>koopa troopa</label>
    <race>KoopaTroopa</race>
    <combatPower>60</combatPower>
    <ecoSystemWeight>.6</ecoSystemWeight>
    <lifeStages>
      <li>
        <bodyGraphicData>
